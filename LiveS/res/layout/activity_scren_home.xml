<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home" >
 <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_go_back"
        android:onClick="buttonExit"
        android:text="Exit" />
    <Button
        android:id="@+id/forward"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_go_back"
        android:onClick="buttonConfiguration"
        android:text="Help" />


    <Button
        android:id="@+id/consommation"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/controler"
        android:layout_below="@+id/back"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_home_screen_2"
        android:onClick="addlive"
        android:text="Ajouter un Live"
        android:textSize="23sp" />

    <Button
        android:id="@+id/controler"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/consommation"
        android:background="@drawable/button_home_screen_1"
        android:onClick="seeMylives"
        android:text="Voir mes live"
        android:textSize="23sp" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/controler"
        android:layout_below="@+id/controler"
        android:background="@drawable/button_home_screen_2"
        android:onClick="searchLive"
        android:text="recherche d&apos;un Live"
        android:textSize="23sp" />

</RelativeLayout>